<%- include('../layout/header') %>
<%- include('../layout/nav') %>

<section id="contact">
     <div class="container">
          <div class="row">

               <div class="col-md-offset-1 col-md-10 col-sm-12">
                    <div class="section-title">
                         <h3>Contact Infomation</h3>
                         <p>My Email => ykgood66@126.com</p>
                    </div>
                    <div action="#" method="post">
                         <div class="col-md-6 col-sm-6">
                              <input type="text" class="form-control" placeholder="Name" id="name">
                         </div>
                         <div class="col-md-6 col-sm-6">
                              <input type="email" class="form-control" placeholder="Email" id="email">
                         </div>
                         <div class="col-md-6 col-sm-6">
                              <input type="telephone" class="form-control" placeholder="Phone Number" id="phone">
                         </div>
                         <div class="col-md-12 col-sm-12">
                              <textarea class="form-control" rows="5" placeholder="Note" id="note"></textarea>
                         </div>
                         <div class="col-md-3 col-sm-4">
                              <input type="submit" class="form-control" value="Send Message" id="send_message">
                         </div>
                    </div>


               </div>
          </div>
     </div>
</section>
<%- include('../layout/footer') %>

<script>
     $(function () {
          $("#send_message").click(() => {
               
               $.ajax({
                    url: "/contact/addArticle",
                    type: "post",
                    data: {
                         name: $("#name").val(),
                         email: $("#email").val(),
                         phone: $("#phone").val(),
                         note: $("#note").val(),
                    },
                    success: (resp) => {
                         if (resp.data) {
                              alert("感谢你的来信,消息已发送");
                         }
                    }
               })
          })
     })
</script>